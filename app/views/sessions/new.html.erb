<h2>Login</h2>
<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <div class="center-align">

  <%= f.submit "Login", class:"waves-effect waves-light btn-large" %>
<% end %>
<br><br>
  <%= link_to "Sign in with Facebook", facebook_login_path, id: "sign_in", class:"waves-effect waves-light btn-large center-align" %>
</div>
